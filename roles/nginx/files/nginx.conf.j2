user  www-data;
worker_processes  {{ ansible_processor_cores }};

error_log  logs/error.log crit;
pid        /var/run/nginx.pid;

events {
    multi_accept        on;
    worker_connections  1024;
}

http {
    include       mime.types;
    default_type  application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  off;

    sendfile        on;
    tcp_nopush      on;
    tcp_nodelay     on;

    keepalive_timeout  65;

    client_max_body_size     32m;
    client_body_buffer_size  16m;

    brotli             on;
    brotli_static      on;
    gzip               on;
    gzip_static        on;
    gzip_http_version  1.1;
    gzip_vary          on;
    gzip_disable       "MSIE [1-6]\.";
    gzip_proxied       expired no-cache no-store private auth;
    gzip_types         text/plain text/css application/json text/xml application/xml application/xml+rss text/javascript application/javascript text/x-js;

    map $http_upgrade $connection_upgrade {
        default  upgrade;
        ''       close;
    }

    ssl_certificate /usr/local/nginx/conf/ssl/default.crt;
    ssl_certificate_key /usr/local/nginx/conf/ssl/default.key;

    ssl_ciphers                ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-SHA384:ECDHE-RSA-AES128-SHA256:ECDHE-RSA-RC4-SHA:ECDHE-RSA-AES256-SHA:DHE-RSA-AES256-SHA:RC4-SHA;
    ssl_protocols              SSLv3 TLSv1 TLSv1.1 TLSv1.2;
    ssl_prefer_server_ciphers  on;
    ssl_session_cache          shared:SSL:10m;
    ssl_session_timeout        10m;

    server {
        listen 80 default_server;
        listen 443 ssl http2;
        server_name _ {{ inventory_hostname }};
        server_name_in_redirect off;

        location / {
            return 403;
        }
    }

    include /usr/local/nginx/sites/*;
}
